@model string

@if (!string.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "bg-red-100 text-red-700 border-red-400" : "bg-green-100 text-green-700 border-green-400";
    <div class="border-l-4 @statusMessageClass p-4 mb-4 rounded relative" role="alert">
        <button type="button" class="absolute top-0 right-0 p-1 text-gray-400 hover:text-gray-600" aria-label="Close" onclick="this.parentElement.style.display='none';">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
        @Model
    </div>
}
