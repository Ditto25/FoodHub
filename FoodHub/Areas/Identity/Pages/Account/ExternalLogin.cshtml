@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-3xl font-bold">@ViewData["Title"]</h1>
<h2 id="external-login-title" class="text-2xl mt-4">Associate your @Model.ProviderDisplayName account.</h2>
<hr class="my-4" />

<p id="external-login-description" class="text-blue-600">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="mt-6">
    <div class="max-w-md mx-auto">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.Email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500" autocomplete="email" placeholder="Please enter your email." />
                <span asp-validation-for="Input.Email" class="text-red-600"></span>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
