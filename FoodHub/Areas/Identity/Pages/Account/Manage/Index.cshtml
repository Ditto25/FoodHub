@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-2xl font-bold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="max-w-md mx-auto">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
        
        <div class="mb-4">
            <input asp-for="Username" class="block w-full p-2 border border-gray-300 rounded-md bg-gray-100" placeholder="Please choose your username." disabled />
            <label asp-for="Username" class="block text-gray-700 mt-1"></label>
        </div>
        
        <div class="mb-4">
            <input asp-for="Input.PhoneNumber" class="block w-full p-2 border border-gray-300 rounded-md" placeholder="Please enter your phone number." />
            <label asp-for="Input.PhoneNumber" class="block text-gray-700 mt-1"></label>
            <span asp-validation-for="Input.PhoneNumber" class="text-red-600"></span>
        </div>
        
        <button id="update-profile-button" type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded-md">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
