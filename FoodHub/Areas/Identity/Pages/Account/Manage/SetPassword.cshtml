@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-2xl font-bold mb-4">Set your password</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-blue-600 mb-4">
    You do not have a local username/password for this site. Add a local account so you can log in without an external login.
</p>

<div>
    <form id="set-password-form" method="post" class="max-w-md">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
        
        <div class="mb-4">
            <label asp-for="Input.NewPassword" class="block text-gray-700 text-sm font-bold mb-2" for="Input.NewPassword">New Password</label>
            <input asp-for="Input.NewPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="new-password" placeholder="Please enter your new password." />
            <span asp-validation-for="Input.NewPassword" class="text-red-600"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Input.ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2" for="Input.ConfirmPassword">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="new-password" placeholder="Please confirm your new password." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600"></span>
        </div>
        
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 rounded-md">Set password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
