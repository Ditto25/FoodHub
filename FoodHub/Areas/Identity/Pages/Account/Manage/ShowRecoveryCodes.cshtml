@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3 class="text-2xl font-bold mb-4">@ViewData["Title"]</h3>

<div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-4" role="alert">
    <p class="font-bold">Put these codes in a safe place.</p>
    <p>If you lose your device and don't have the recovery codes you will lose access to your account.</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
    {
        <div class="flex items-center mb-2">
            <code class="recovery-code bg-gray-100 border border-gray-300 rounded p-2 mr-2">@Model.RecoveryCodes[row]</code>
            @if (row + 1 < Model.RecoveryCodes.Length) {
                <code class="recovery-code bg-gray-100 border border-gray-300 rounded p-2">@Model.RecoveryCodes[row + 1]</code>
            }
        </div>
    }
</div>
