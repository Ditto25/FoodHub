@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-2xl font-bold">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="mt-6">
    <div class="w-full md:w-1/2 mx-auto">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>

            <div class="mb-4">
                <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.OldPassword" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-300" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.NewPassword" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-300" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Input.ConfirmPassword" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-indigo-200 focus:border-indigo-300" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
