@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="min-h-screen flex flex-col justify-center bg-gray-100 py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="text-center text-3xl font-semibold text-gray-900 mb-4">@ViewData["Title"]</h1>
        <h2 class="text-center text-lg text-gray-700 mb-6">Reset your password.</h2>
        <hr class="mb-6" />

        <form method="post" class="bg-white p-6 rounded-lg shadow-md">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true"
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                       placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true"
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                       placeholder="Please enter your password." />
                <span asp-validation-for="Input.Password" class="text-red-600 text-xs"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true"
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                       placeholder="Please confirm your password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-xs"></span>
            </div>

            <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-cyan-500 to-blue-500 transition ease-in-out hover:from-blue-500 hover:to-cyan-500 hover:scale-105">
                Reset
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
