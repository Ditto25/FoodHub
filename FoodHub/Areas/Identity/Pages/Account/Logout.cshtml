@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <header class="text-center">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h1>
        @{
            if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="mt-4 text-indigo-600 hover:text-indigo-500 font-medium">
                        Click here to Logout
                    </button>
                </form>
            }
            else
            {
                <p class="text-gray-700 mt-4">You have successfully logged out of the application.</p>
            }
        }
    </header>
</div>
