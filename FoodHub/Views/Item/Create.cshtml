@model Item

@{
    ViewData["Title"] = "Create New Item";
    Layout = "_Layout";
}

<div class="main-container max-w-full lg:max-w-[2000px] mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center">
    <div class="kontainer w-full max-w-[1400px] flex justify-center items-center min-h-[10vh]">
        <div class="text-center w-full mx-auto">
            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-6xl font-medium tracking-tight gradient-text-large mb-4" data-aos="fade-up">
                Add a New <span class="gradient-text underline pr-2 font-extrabold">Food Item</span>
            </h1>
            <p class="text-md font-light text-gray-500 mt-6" data-aos="fade-up" data-aos-delay="100">
                Help us grow our database by adding accurate nutritional information.
            </p>
        </div>
    </div>

    <div class="content-section max-w-[1800px] my-12 px-5 flex flex-col justify-between items-center w-full">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="w-full max-w-5xl bg-white rounded-lg shadow-lg p-8" data-aos="fade-up" data-aos-delay="200">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-40">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <h2 class="text-2xl font-semibold mb-4">Basic Information</h2>
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input asp-for="Name" class="mt-1 p-2 block w-full rounded-lg border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-30" />
                        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                    </div>

                    @* <div>
                        <label asp-for="ItemCategory" class="block text-sm font-medium text-gray-700">Category</label>
                        <input asp-for="ItemCategory" class="mt-1 p-2 block w-full rounded-lg border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                        <span asp-validation-for="ItemCategory" class="text-red-500 text-sm"></span>
                    </div> *@

                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
                        <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label for="ImageUpload" class="block text-sm font-medium text-gray-700">Image</label>
                        <div class="mt-1 flex items-center">
                            <input type="file" id="ImgageUrl" name="ImageUrl" accept="image/*" class="hidden" onchange="showFileName(this)" />
                            <label for="ImageUrl" class="cursor-pointer bg-white py-2 px-3 border border-gray-300 rounded-full shadow-sm text-sm leading-4 font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Choose file
                            </label>
                            <span id="fileName" class="ml-3 text-sm text-gray-500"></span>
                        </div>
                    </div>
                </div>

                <!-- Nutritional Information -->
                <div class="space-y-4">
                    <h2 class="text-2xl font-semibold mb-4">Nutritional Information (per 100g)</h2>
                    
                    @foreach (var nutrient in new[] { "Energy", "TotalFat", "SaturatedFat", "UnsaturedFat", "Carbohydrate", "Sugar", "DietaryFiber", "Protein", "Salt" })
                    {
                        <div>
                            <label asp-for="@nutrient" class="block text-sm font-medium text-gray-700">@nutrient</label>
                            <input asp-for="@nutrient" class="mt-1 p-2 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                            <span asp-validation-for="@nutrient" class="text-red-500 text-sm"></span>
                        </div>
                    }
                </div>
            </div>

            <div class="flex justify-end space-x-3 mt-8">
                <a asp-action="Index" class="px-6 py-3 bg-gray-300 text-gray-700 rounded-full hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 transition-colors">Cancel</a>
                <button type="submit" class="px-6 py-3 bg-gray-800 text-white rounded-full hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition-colors">Create Item</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showFileName(input) {
            var fileName = input.files[0].name;
            document.getElementById('fileName').textContent = fileName;
        }
    </script>
}
