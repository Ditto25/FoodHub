@model IEnumerable<FoodHub.Models.Item>

@{
    ViewData["Title"] = "Search Results";
}

<h2>Search Results</h2>

<form asp-action="Search" method="get">
    <input type="text" name="searchString" placeholder="Search for items..." value="@ViewData["CurrentFilter"]" />
    <button type="submit">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Energy</th>
                <th>Carbohydrate</th>
                <th>Total Fat</th>
                <th>Saturated Fat</th>
                <th>Unsaturated Fat</th>
                <th>Sugar</th>
                <th>Dietary Fiber</th>
                <th>Protein</th>
                <th>Salt</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Energy</td>
                    <td>@item.Carbohydrate</td>
                    <td>@item.TotalFat</td>
                    <td>@item.SaturatedFat</td>
                    <td>@item.UnsaturedFat</td>
                    <td>@item.Sugar</td>
                    <td>@item.DietaryFiber</td>
                    <td>@item.Protein</td>
                    <td>@item.Salt</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.Name" style="max-width:100px;" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found for your search.</p>
}
