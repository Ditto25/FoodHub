@model Item

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
        <!-- Image Section -->
        <div class="lg:w-1/2">
            <div class="rounded-lg overflow-hidden hover:scale-[1.01] transition-all ease-in-out">
                <div class="aspect-square relative">
                    <div class="absolute inset-0 flex items-center justify-center p-1 lg:p-5">
                        <img class="max-w-full max-h-full object-contain" src="@Model.ImageUrl" alt="@Model.Name" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Section -->
        <div class="lg:w-1/3 space-y-6 mt-0 lg:mt-12">
            <h1 class="text-5xl font-bold text-gray-900 dark:text-white">@Model.Name</h1>
            <h2 class="text-xl font-semibold text-gray-600 dark:text-gray-300">@Model.ProducerName</h2>

            <p class="text-gray-700 dark:text-gray-300">@Model.Description</p>

            <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Nutritional Information (per 100g)</h3>
                <div class="grid grid-cols-2 gap-3">
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Energy</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Energy kcal</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Carbohydrate</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Carbohydrate g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Total Fat</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.TotalFat g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Saturated Fat</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.SaturatedFat g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Unsaturated Fat</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.UnsaturedFat g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Sugar</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Sugar g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Dietary Fiber</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.DietaryFiber g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Protein</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Protein g</p>
                    </div>
                    <div class="bg-gray-100 dark:bg-[#1d1d1f] dark:border-[#303030d5] p-4 rounded-md">
                        <p class="font-normal text-md text-gray-700 dark:text-gray-300">Salt</p>
                        <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Salt g</p>
                    </div>
                </div>
            </div>

            <div class="flex space-x-4 pt-6">
                <a href="/Item/Table" class="bg-slate-900 hover:bg-slate-700 text-white font-normal py-2 px-4 rounded transition duration-100">
                    Back to Table View
                </a>
                <a href="/Search?query=" class="bg-slate-900 hover:bg-slate-700 text-white font-normal py-2 px-4 rounded transition duration-100">
                    All Items
                </a>
            </div>
        </div>
    </div>
</div>
