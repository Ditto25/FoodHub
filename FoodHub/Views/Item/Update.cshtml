@model Item

<h2>Update Item</h2>

<form asp-action="Update">
    <!-- Hidden field for Item ID -->
    <input type="hidden" asp-for="ItemId" />

    <!-- Name -->
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <!-- Producer -->
    <div class="form-group">
        <label asp-for="ProducerName"></label>
        <input asp-for="ProducerName" class="form-control" />
        <span asp-validation-for="ProducerName" class="text-danger"></span>
    </div>

    <!-- Category -->
    <div>
        <label asp-for="ItemCategoryId" class="block text-sm font-medium text-gray-700">Category</label>
        <select asp-for="ItemCategoryId" asp-items="ViewBag.Categories" class="mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
            <option value="">-- Select a Category --</option>
        </select>
        <span asp-validation-for="ItemCategoryId" class="text-red-500 text-sm"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Image URL -->
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Nutritional Information -->
    <h4>Nutritional Information (per 100g):</h4>

    <!-- Energy -->
    <div class="form-group">
        <label asp-for="Energy"></label>
        <input asp-for="Energy" class="form-control" />
        <span asp-validation-for="Energy" class="text-danger"></span>
    </div>

    <!-- Carbohydrate -->
    <div class="form-group">
        <label asp-for="Carbohydrate"></label>
        <input asp-for="Carbohydrate" class="form-control" />
        <span asp-validation-for="Carbohydrate" class="text-danger"></span>
    </div>

    <!-- Total Fat -->
    <div class="form-group">
        <label asp-for="TotalFat"></label>
        <input asp-for="TotalFat" class="form-control" />
        <span asp-validation-for="TotalFat" class="text-danger"></span>
    </div>

    <!-- Saturated Fat -->
    <div class="form-group">
        <label asp-for="SaturatedFat"></label>
        <input asp-for="SaturatedFat" class="form-control" />
        <span asp-validation-for="SaturatedFat" class="text-danger"></span>
    </div>

    <!-- Unsaturated Fat -->
    <div class="form-group">
        <label asp-for="UnsaturedFat"></label>
        <input asp-for="UnsaturedFat" class="form-control" />
        <span asp-validation-for="UnsaturedFat" class="text-danger"></span>
    </div>

    <!-- Sugar -->
    <div class="form-group"></div>
        <label asp-for="Sugar"></label>
        <input asp-for="Sugar" class="form-control" />
        <span asp-validation-for="Sugar" class="text-danger"></span>
    </div>

    <!-- Dietary Fiber -->
    <div class="form-group">
        <label asp-for="DietaryFiber"></label>
        <input asp-for="DietaryFiber" class="form-control" />
        <span asp-validation-for="DietaryFiber" class="text-danger"></span>
    </div>

    <!-- Protein -->
    <div class="form-group">
        <label asp-for="Protein"></label>
        <input asp-for="Protein" class="form-control" />
        <span asp-validation-for="Protein" class="text-danger"></span>
    </div>

    <!-- Salt -->
    <div class="form-group">
        <label asp-for="Salt"></label>
        <input asp-for="Salt" class="form-control" />
        <span asp-validation-for="Salt" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Table" class="btn btn-secondary">Cancel</a>
</form>