@{
    // Setting the page title in ViewData
    ViewData["Title"] = "Home page";
    
    // Defining the layout for this view
    Layout = "_Layout";
}


<!-- Main container div for page content with flexbox layout -->
<div class="main-container max-w-full lg:max-w-[2000px] mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center">
    <img src="/images/Illustrations/fatcarbprot.png" alt="Food 1" class="absolute hidden md:block animate-float top-[15%] left-[7%] w-44 md:w-34 lg:w-72" style="animation-delay: 0s;">
    <img src="/images/Illustrations/checks.png" alt="Food 2" class="absolute hidden md:block animate-float top-1/4 right-[4%] w-20 md:w-28 lg:w-52 invert dark:invert-0" style="animation-delay: 0.5s;">
    <img src="/images/Illustrations/graphs.png" alt="Food 3" class="absolute hidden md:block animate-float bottom-1/4 left-[10%] w-24 md:w-32 lg:w-64" style="animation-delay: 1s;">
    <img src="/images/Illustrations/allergens.png" alt="Food 4" class="absolute hidden md:block animate-float bottom-1/4 right-[13%] w-20 md:w-28 lg:w-52" style="animation-delay: 1.5s;">

    <!-- Section containing the title and search bar -->
    <div class="w-full max-w-[1400px] flex justify-center items-center min-h-[40vh] mt-28">
        <div class="text-center w-full mx-auto">
            <!-- Main title of the page with animations and gradient text -->
            <h1 class="text-5xl sm:text-5xl md:text-6xl lg:text-7xl font-medium tracking-tight gradient-text-large mt-8" data-aos="fade-up">
                Find out what youÂ´re<br>
                <span class="relative inline-block">
                    <!-- Blurred glow shadow text -->
                    <span class="absolute top-3 left-10 blur-[20px] bg-gradient-to-r from-lime-500 to-lime-300 opacity-70 bg-clip-text text-transparent" data-aos="fade-up">
                        <i>actually</i>
                    </span>
                    <span class="relative z-10 bg-gradient-to-r from-lime-800 to-lime-300 text-transparent bg-clip-text p-3 font-extrabold dark:drop-shadow-" data-aos="fade-up">
                        <i>actually</i>
                    </span>
                </span>
                eating
            </h1>
            <!-- Supporting description text with fade-up animation -->
            <p class="text-md font-light text-gray-500 mt-8 dark:text-gray-400" data-aos="fade-up" data-aos-delay="100">
                We provide you with the most accurate <br> information about the food you eat.
            </p>
            <!-- Search form for finding food, with animations and flexible design for different screen sizes -->
            <div class="search-container mt-8 w-full max-w-xl mx-auto" data-aos="fade-up" data-aos-delay="200">
                <form asp-controller="Search" asp-action="Index" method="get" class="flex justify-center w-full">
                    <div class="flex w-full max-w-2xl">
                        <!-- Search icon inside a rounded box -->
                        <div class="flex items-center justify-center rounded-l-full border-t border-b border-l border-gray-300 bg-white dark:!bg-[#1d1d1f] dark:!border-[#303030d5] px-4">
                            <svg viewBox="0 0 20 20" aria-hidden="true" class="w-5 h-5 fill-gray-500">
                                <path d="M16.72 17.78a.75.75 0 1 0 1.06-1.06l-1.06 1.06ZM9 14.5A5.5 5.5 0 0 1 3.5 9H2a7 7 0 0 0 7 7v-1.5ZM3.5 9A5.5 5.5 0 0 1 9 3.5V2a7 7 0 0 0-7 7h1.5ZM9 3.5A5.5 5.5 0 0 1 14.5 9H16a7 7 0 0 0-7-7v1.5Zm3.89 10.45 3.83 3.83 1.06-1.06-3.83-3.83-1.06 1.06ZM14.5 9a5.48 5.48 0 0 1-1.61 3.89l1.06 1.06A6.98 6.98 0 0 0 16 9h-1.5Zm-1.61 3.89A5.48 5.48 0 0 1 9 14.5V16a6.98 6.98 0 0 0 4.95-2.05l-1.06-1.06Z"></path>
                            </svg>
                        </div>

                        <!-- Text input for search query -->
                        <input type="text" name="query" placeholder="Search for your favourite food..." class="w-full py-3 px-4 bg-white dark:bg-[#1d1d1f] dark:border-[#303030d5] text-base outline-none border-y border-gray-300">
                        
                        <!-- Submit button for search -->
                        <button type="submit" class="bg-gray-800 px-6 py-3 rounded-r-full text-white hover:bg-blue-800 transition-colors">
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Section displaying partner logos in a scrollable container -->
    <div class="partners-section flex flex-col w-full justify-around items-center mt-52 bg-[#F6F6F6] dark:bg-[#1d1d1f] dark:border-[#303030d5] border border-slate-200" data-aos="fade-up" data-aos-delay="400">
        <h3 class="partners-text text-black text-xl sm:text-2xl md:text-2xl lg:text-2xl font-medium dark:text-white">Our Partners</h3>
        
        <!-- Scrollable container for partner logos -->
        <div class="scroll-container w-full overflow-hidden mt-8">
            <div class="scroll-content flex">
                <div class="logos-group flex items-center">
                    <!-- Partner logos with custom size and optional color inversion for dark mode -->
                    <img src="/images/logos/orkla_logo.png" alt="Orkla" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] invert mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                    <img src="/images/logos/synnove-1.svg" alt="Synnove" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] mx-3 sm:mx-4 md:mx-5">
                    <img src="/images/logos/tinelogo.png" alt="Tine" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] invert mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                    <img src="/images/logos/kavlilogo.png" alt="Kavli" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                </div>

                <!-- Another set of logos repeated for scrolling effect -->
                <div class="logos-group flex items-center">
                    <img src="/images/logos/orkla_logo.png" alt="Orkla" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] invert mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                    <img src="/images/logos/synnove-1.svg" alt="Synnove" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] mx-3 sm:mx-4 md:mx-5">
                    <img src="/images/logos/tinelogo.png" alt="Tine" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] invert mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                    <img src="/images/logos/kavlilogo.png" alt="Kavli" class="logo-partner w-[60px] sm:w-[60px] md:w-[80px] lg:w-[100px] mx-3 sm:mx-4 md:mx-5 dark:invert-0">
                </div>
            </div>
        </div>
    </div>

    <!-- Content sections with images and text about the website's features -->
    <div class="content-section max-w-[1800px] my-12 px-5 flex flex-col justify-between items-center">
        <!-- First feature section -->
        <div class="flex flex-col sm:flex-row-reverse items-center my-24 w-full">
            <div class="w-full sm:w-1/2 mb-8 sm:mb-0 space-y-4">
                <!-- Card 1 -->
                <div class="w-full max-w-[290px] h-[70px] bg-[#1d1d1f] border dark:border-[#262626d5] rounded-[20px] flex items-center justify-start backdrop-blur-[10px] transition-all duration-300 ease-out hover:cursor-pointer hover:scale-105 ml-0 sm:ml-12" data-aos="fade-left" data-aos-delay="100">
                    <div class="w-[50px] h-[50px] ml-[10px] rounded-[10px] bg-gradient-to-b from-[#ffafaf] to-[#ff9b10] transition-all duration-500 ease-in-out"></div>
                    <div class="w-[calc(100%-90px)] ml-[10px] text-white">
                        <div class="flex items-center justify-between">
                            <p class="text-[16px] font-bold">Protein</p>
                            <span class="text-[10px]">12 min ago</span>
                        </div>
                        <p class="text-[12px] font-light">23 grams</p>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="w-full max-w-[290px] h-[70px] bg-[#1d1d1f] border dark:border-[#262626d5] rounded-[20px] flex items-center justify-start backdrop-blur-[10px] transition-all duration-300 ease-in-out hover:cursor-pointer hover:scale-105 ml-8 sm:ml-0" data-aos="fade-left" data-aos-delay="200">
                    <div class="w-[50px] h-[50px] ml-[10px] rounded-[10px] bg-gradient-to-b from-[#fff09a] to-[#c6ff77] transition-all duration-500 ease-out"></div>
                    <div class="w-[calc(100%-90px)] ml-[10px] text-white">
                        <div class="flex items-center justify-between">
                            <p class="text-[16px] font-bold">Carbohydrates</p>
                            <span class="text-[10px]">25 min ago</span>
                        </div>
                        <p class="text-[12px] font-light">12 grams</p>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="w-full max-w-[290px] h-[70px] bg-[#1d1d1f] border dark:border-[#262626d5] rounded-[20px] flex items-center justify-start backdrop-blur-[10px] transition-all duration-300 ease-out hover:cursor-pointer hover:scale-105 ml-4 sm:ml-20" data-aos="fade-left" data-aos-delay="300">
                    <div class="w-[50px] h-[50px] ml-[10px] rounded-[10px] bg-gradient-to-b from-[#99fffa] to-[#35a1ff] transition-all duration-500 ease-in-out"></div>
                    <div class="w-[calc(100%-90px)] ml-[10px] text-white">
                        <div class="flex items-center justify-between">
                            <p class="text-[16px] font-bold">Fats</p>
                            <span class="text-[10px]">38 min ago</span>
                        </div>
                        <p class="text-[12px] font-light">3 grams</p>
                    </div>
                </div>
            </div>
                    
            <div class="w-full sm:w-1/2 px-4 sm:px-8 text-center sm:text-left" data-aos="fade-right" data-aos-delay="50">
                <h2 class="text-4xl sm:text-6xl font-bold mb-5">
                    Full Transparency
                </h2>
                <div class="max-w-sm mx-auto sm:mx-0">
                    <p class="text-lg text-slate-400 dark:text-slate-300">
                        Understand the nutritional value of every meal you eat, and stay in control of your health.
                    </p>
                </div>
            </div>
        </div>

        <!-- Second feature section -->
        <div class="flex flex-col sm:flex-row items-center my-24 w-full">
            <div class="w-full sm:w-1/2 mb-8 sm:mb-0">
                <img src="../images/Illustrations/chef-phone.png" alt="Food Image 1" class="w-full h-auto rounded-2xl tilt-element dark:invert">
            </div>
            <div class="w-full sm:w-1/2 px-4 sm:px-8 text-center sm:text-left" data-aos="fade-left" data-aos-delay="50">
                <h2 class="text-4xl sm:text-6xl font-bold mb-5">
                    Delicious Recipes
                </h2>
                <div class="max-w-sm mx-auto sm:mx-0">
                    <p class="text-lg text-slate-400 dark:text-slate-300"">
                        Discover a world of flavors with our curated collection of recipes from around the globe. 
                        Accessible from your phone.
                    </p>
                </div>
            </div>
        </div>
        
        <!-- Third feature section -->
        <div class="flex flex-col sm:flex-row-reverse items-center my-24 w-full">
            <div class="w-full sm:w-1/2 mb-8 sm:mb-0">
                <img src="../images/Illustrations/supplements.png" alt="Food Image 2" class="w-full h-auto rounded-2xl tilt-element dark:invert">
            </div>
            <div class="w-full sm:w-1/2 px-4 sm:px-8 text-center sm:text-left" data-aos="fade-right" data-aos-delay="50">
                <h2 class="text-4xl sm:text-6xl font-bold mb-5">
                    Track your nutrition
                </h2>
                <div class="max-w-sm mx-auto sm:mx-0">
                    <p class="text-lg text-slate-400 dark:text-slate-300"">
                        Understand the nutritional value of every meal you eat, and stay in control of your health.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="all-stats-container flex flex-col items-center py-10 bg-[#f7f7f7] dark:bg-[#0d0d0d] w-screen mb-32">
        <div class="stats-container flex flex-wrap max-w-[1200px] w-full mx-auto px-2 gap-[1px]">
            <div class="stat-box flex-1 basis-[calc(25%-1rem)] min-w-[200px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="100">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">200+</h3>
                <p class="text-gray-600 dark:text-gray-400">Recipes</p>
            </div>
            <div class="stat-box flex-1 basis-[calc(25%-1rem)] min-w-[200px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="150">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">1st place</h3>
                <p class="text-gray-600 dark:text-gray-400">User Choice Award</p>
            </div>
            <div class="stat-box flex-1 basis-[calc(25%-1rem)] min-w-[200px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="200">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">15<sup>+</sup></h3>
                <p class="text-gray-600 dark:text-gray-400">Cuisines</p>
            </div>
            <div class="stat-box flex-1 basis-[calc(25%-1rem)] min-w-[200px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="250">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">100%</h3>
                <p class="text-gray-600 dark:text-gray-400">Transparency</p>
            </div>
            <div class="stat-box flex-1 basis-[calc(50%-1rem)] min-w-[300px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="300">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">50+</h3>
                <p class="text-gray-600 dark:text-gray-400">Food producers</p>
            </div>
            <div class="stat-box flex-1 basis-[calc(50%-1rem)] min-w-[300px] p-4 border border-slate-200 dark:border-[#303030d5] bg-white dark:bg-[#1d1d1f]" data-aos="zoom-in" data-aos-delay="350">
                <h3 class="text-4xl font-extrabold mb-2 gradient-text">All Foods</h3>
                <p class="text-gray-600 dark:text-gray-400">are thoroughly tested and inspected</p>
            </div>
        </div>
    </div>
</div>

<script src="/js/vanilla-tilt.js"></script>

<!-- Script for hover-based tilt effect -->
<script>
    VanillaTilt.init(document.querySelectorAll(".tilt-element"), {
        max: 15,
        speed: 300
    });
</script>
