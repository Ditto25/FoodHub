@model IEnumerable<FoodHub.Models.Item>

<div class="container mx-auto px-4 flex py-12">
    <div class="w-1/4 pr-6 p-5 rounded-lg">
        <h3 class="font-bold text-2xl mb-2">Categories</h3>
        <hr class="py-2">
        <ul class="space-y-0">
            <li class="hover:scale-[1.01]">
                <a asp-controller="Search" asp-action="Index" asp-route-query="@ViewData["CurrentQuery"]" class="text-gray-800 hover:text-blue-800">
                    All Categories
                </a>
            </li>
            @foreach (var category in ViewBag.Categories)
{
    <li class="border-l-2 pl-4 py-2 hover:border-l-gray-500">
        <a asp-controller="Search" 
           asp-action="Index" 
           asp-route-query="@ViewData["CurrentQuery"]"
           asp-route-categoryId="@category.ItemCategoryId"
           class="text-gray-800  hover:text-blue-800 text-base  @(category.ItemCategoryId.ToString() == ViewData["CurrentCategory"]?.ToString() ? "font-bold" : "")">
            @category.Name
        </a>
    </li>
}
        </ul>
    </div>

    <!-- Right Side for Search Results -->
    <div class="w-3/4 pl-12 border-l-2">
        <h2 class="text-4xl font-bold mb-4">Search Results</h2>
        <hr class="pb-3">
        
        @if (!Model.Any())
        {
            <p class="text-gray-600">No items found.</p>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                @foreach (var item in Model)
                {
                    <div class="bg-white rounded-lg overflow-hidden hover:scale-[1.01] transition-all ease-in-out">
                        <a asp-controller="Item" asp-action="Details" asp-route-id="@item.ItemId">
                            <img class="w-60 h-60 object-cover p-4 rounded-lg" src="@item.ImageUrl" alt="@item.Name" />
                            <div class="p-4">
                                <h3 class="font-semibold text-xl mb-2">@item.Name</h3>
                                <p class="text-gray-700 text-base mb-2 truncate">@item.Description</p>
                                <p class="text-gray-600 text-sm">Energy: @item.Energy kcal</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>