@model IEnumerable<FoodHub.Models.Item>

<div class="container mx-auto px-4 flex">
    <!-- Left Sidebar for Categories -->
    <div class="w-1/4 pr-4">
        <h3 class="font-bold text-lg mb-2">Categories</h3>
        <ul class="space-y-2">
            <li>
                <a asp-controller="Search" asp-action="Index" asp-route-query="@ViewData["CurrentQuery"]" class="text-blue-600 hover:text-blue-800">
                    All Categories
                </a>
            </li>
            @foreach (var category in ViewBag.Categories)
{
    <li>
        <a asp-controller="Search" 
           asp-action="Index" 
           asp-route-query="@ViewData["CurrentQuery"]"
           asp-route-categoryId="@category.ItemCategoryId"
           class="text-blue-600 hover:text-blue-800 @(category.ItemCategoryId.ToString() == ViewData["CurrentCategory"]?.ToString() ? "font-bold" : "")">
            @category.Name
        </a>
    </li>
}
        </ul>
    </div>

    <!-- Right Side for Search Results -->
    <div class="w-3/4">
        <h2 class="text-2xl font-bold mb-4">Search Results</h2>
        
        @if (!Model.Any())
        {
            <p class="text-gray-600">No items found.</p>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var item in Model)
                {
                    <div class="bg-white shadow-md rounded-lg overflow-hidden">
                        <a asp-controller="Item" asp-action="Details" asp-route-id="@item.ItemId">
                            <img class="w-full h-48 object-cover" src="@item.ImageUrl" alt="@item.Name" />
                            <div class="p-4">
                                <h3 class="font-bold text-xl mb-2">@item.Name</h3>
                                <p class="text-gray-700 text-base mb-2 truncate">@item.Description</p>
                                <p class="text-gray-600 text-sm">Energy: @item.Energy kcal</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>