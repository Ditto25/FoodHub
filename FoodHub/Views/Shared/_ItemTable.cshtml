@model IEnumerable<Item>

<div class="table-container">
    <table class="table table-striped modern-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemId</td>
                    <td>
                        <a asp-controller="Item"
                           asp-action="Details"
                           asp-route-id="@item.ItemId"
                           class="item-link">@item.Name</a>
                    </td>
                    <td>@item.Price.ToString("0.00 NOK")</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.ImageUrl" alt="@item.Name" class="item-image" />
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.ItemId" class="action-link">Update</a> 
                        <a asp-action="Delete" asp-route-id="@item.ItemId" class="action-link">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="mt-4">
        <a class="btn btn-primary create-btn" asp-controller="Item" asp-action="Create">Create New Item</a>
    </p>
</div>
